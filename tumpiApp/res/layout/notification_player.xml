<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img_reproductor_notificacion"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/caratula_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center|left"
            android:paddingLeft="4dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/texto_cancion_notificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif-light"
                android:textSize="18sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Nombre Cancion" />

            <TextView
                android:id="@+id/texto_autor_notificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#99ffffff"
                android:maxLines="1"
              	android:ellipsize="end"
                android:textSize="14sp"
                android:text="Nombre autor" />
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/btn_play_notificacion"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/background_boton_notificacion"
                android:src="@drawable/image_play_white" />

            <ImageButton
                android:id="@+id/btn_next_notificacion"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/background_boton_notificacion"
                android:src="@drawable/image_next_white" />

            <ImageButton
                android:id="@+id/btn_close_notificacion"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/background_boton_notificacion"
                android:src="@drawable/image_cancel" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>