<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_weight="8"
              android:layout_width="fill_parent"
              android:layout_height="450dp"
              android:background="@drawable/background_panel_reproductor"
>
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent" 
    >
        <LinearLayout android:orientation="horizontal"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      android:layout_weight="1"
                      android:gravity="left"
        >
            <ImageView android:id="@+id/caratulaDisco_listas"
                       android:layout_width="200dp"
                       android:layout_height="fill_parent"
                       android:layout_gravity="left"
                       android:layout_weight="3"
                       android:background="@drawable/caratula_default"
            />
            <LinearLayout android:orientation="vertical"
                          android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:layout_weight="1"
            >
                <Button android:id="@+id/txtNombreCancionReproduciendo"
                          android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:paddingLeft="10dp"
                          android:background="@drawable/background_boton_cliente"
                          android:paddingTop="5dp"
                          android:textStyle="bold"
                          android:textSize="16sp"
                          android:text="Promocionar"
                />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      android:gravity="right"
                      android:layout_weight="2"
        >
            <ImageButton android:id="@+id/btnPlay_listas"
                         android:layout_width="50dp"
                         android:layout_height="fill_parent"
                         android:background="@drawable/background_boton_reproductor"
                         android:src="@drawable/image_play"
                         android:onClick="clickPlay"
            />
            <ImageButton android:id="@+id/btnNext_listas"
                         android:layout_width="50dp"
                         android:layout_height="fill_parent"
                         android:background="@drawable/background_boton_reproductor"
                         android:src="@drawable/image_next"
                         android:onClick="clickNext"
            />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>