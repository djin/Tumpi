<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false" 
          android:state_pressed="true"
    >
        <shape>
            <gradient    
                android:endColor="@color/colorFondoItemMenuFinPulsado"
                android:startColor="@color/colorFondoItemMenuInicioPulsado"
                android:angle="270" /> 
            <size
                android:width="50dp"
                android:height="50dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient    
                android:endColor="@color/colorFondoItemMenuFinNormal"
                android:startColor="@color/colorFondoItemMenuInicioNormal"
                android:angle="270" /> 
            <size
                android:width="50dp"
                android:height="50dp" />
        </shape>
    </item>
</selector>
