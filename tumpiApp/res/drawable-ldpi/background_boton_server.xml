<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="false" 
          android:state_pressed="true"
    >
        <shape>
            <corners
                android:radius="12dp" />
            <gradient    
                android:angle="270"  
                android:endColor="@color/colorFondoBotonServerFinPulsado"
                android:startColor="@color/colorFondoBotonServerInicioPulsado"
            /> 
            <padding
                android:left="15dp"
                android:top="15dp"
                android:right="15dp"
                android:bottom="15dp" /> 
        </shape>
    </item>
    <item>
        <shape>
            <corners
                android:radius="8dp" />
            <gradient    
                android:endColor="@color/colorFondoBotonServerInicio"
                android:startColor="@color/colorFondoBotonServerFin"
                android:angle="270" /> 
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" /> 
        </shape>
    </item>
</selector>