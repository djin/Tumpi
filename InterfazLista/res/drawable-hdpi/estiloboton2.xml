<?xml version="1.0" encoding="UTF-8"?>

<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false" 
    android:state_pressed="true">        
        <shape>
             <corners
                android:radius="12dp" />
             <gradient    
                android:endColor="#ff7FB7E6"
                android:startColor="#ff4B6F8D"
                android:angle="270" /> 
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" /> 
        </shape>
    </item>
    <item>        
        <shape>
            <corners
                android:radius="12dp" />
            <gradient    
                android:endColor="#ff4B6F8D"
                android:startColor="#ff7FB7E6"
                android:angle="270" /> 
            <padding
            android:left="10dp"
            android:top="10dp"
            android:right="10dp"
            android:bottom="10dp" /> 
        </shape>
    </item>
    
</selector>
