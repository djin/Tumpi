<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" 
        android:state_pressed="false">        
        <shape>
             <corners
                android:radius="8dp" />
             <gradient    
                android:endColor="#ff01DF01"
                android:startColor="#ff088A08"
                android:angle="270" /> 
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" /> 
        </shape>
    </item>
    <item android:state_focused="true" 
        android:state_pressed="true">        
        <shape>
             <corners
                android:radius="4dp" />
             <gradient    
                android:endColor="#ff088A08"
                android:startColor="#ff01DF01"
                android:angle="270" /> 
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" /> 
        </shape>
    </item>
    <item android:state_focused="false" 
        android:state_pressed="true">        
        <shape>
             <corners
                android:radius="4dp" />
             <gradient    
                android:endColor="#ff088A08"
                android:startColor="#ff01DF01"
                android:angle="270" /> 
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" /> 
        </shape>
    </item>
    <item>        
        <shape>
             <corners
                android:radius="4dp" />
             <gradient    
                android:endColor="#ff01DF01"
                android:startColor="#ff088A08"
                android:angle="270" /> 
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" /> 
        </shape>
    </item>
</selector>