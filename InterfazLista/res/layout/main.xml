<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ListView android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_weight="5"
        android:layout_height="fill_parent"
        android:padding="5dp"
        android:cacheColorHint="#00000000">
    </ListView>

    <ImageView android:id="@id/android:empty"
        android:background="@null"
        android:src="@raw/ico_medium_love"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
    />
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="#ff2E9AFE"
        android:padding="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_weight="5"
             >
                <TextView
                    android:id="@+id/txtPlaying"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Cancion Sonando"
                />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:paddingRight="5dp">
                    <ImageButton
                        android:id="@+id/btnFav"
                        android:src="@raw/ico_small_love"
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                    />
                    
                    <ImageButton
                        android:id="@+id/btnshare"
                        android:src="@raw/ico_small_share"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginBottom="2dp"
                    />
                    
            </LinearLayout>
    </LinearLayout>
        
</LinearLayout>